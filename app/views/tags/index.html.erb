<h1>Listing Tags</h1>
<table>
  <col width="auto">
  <col width="auto">
  <thead>
    <tr>
      <th>Tag</th>      
      <th>Action</th>      
    </tr>
  </thead>

  <tbody>
  <% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.name, tag_path(tag) %></td>
    <td>
      <div class="button-bar">
        <ul class="button-group round">
          <li><%= link_to ' Trash', tag, :class => "fi-trash icon-small small button secondary", method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </td>
  </tr>
  <% end %>    
  </tbody>
</table>        
  